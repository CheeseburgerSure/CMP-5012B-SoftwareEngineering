doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title User Dashboard | ParkFlow
    link(rel="stylesheet" href="styles.css")
    // Add Font Awesome
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")

  body
    // Navbar
    nav.navbar
      .logo ParkFlow
      .menu-icon(onclick="toggleMenu()") &#9776;
      ul.nav-links
        li: a(href="/") Home
        li: a(href="/dashboard") Dashboard
        li: a(href="/sign-out") Sign Out

    // User Dashboard Content
    .content
      .form-container
        h1 Welcome to Your Dashboard

        // Available Balance and Ongoing Sessions
        section#dashboard-stats
          .stat-box
            h3 Available Balance
            p Â£50.00
          .stat-box
            h3 Ongoing Sessions
            p: a(href="/session-details") 2 Active

        // Links to other pages with icons
        section#dashboard-links
          a(href="/change-details")
            i.fas.fa-user-edit
            div Change Your Details
          a(href="/add-car")
            i.fas.fa-car
            div Add Your Car
          a(href="/pay-parking")
            i.fas.fa-credit-card
            div Pay for Parking
          a(href="/logout")
            i.fas.fa-sign-out-alt
            div Logout

    // Floating Chat Box Icon
    .chat-box
      a(href="/chat")
        i.fas.fa-comment-dots

    // Footer
    footer
      p &copy; 2025 ParkFlow. All Rights Reserved.

    script(src="script.js")
