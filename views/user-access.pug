doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title User Dashboard | ParkFlow
  link(rel='stylesheet' href='styles.css')
  // Add Font Awesome
  link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css' rel='stylesheet')
// Navbar
nav.navbar
  .logo ParkFlow
  .menu-icon(onclick='toggleMenu()') &#x2630;
  ul.nav-links
    li
      a(href='index.html') Home
    li
      a(href='user-access.html') Dashboard
    li
      a(href='signin.html') Sign Out
// User Dashboard Content
.content
  .form-container
    h1 Welcome to Your Dashboard
    // Available Balance and Ongoing Sessions
    section#dashboard-stats
      .stat-box
        h3 Available Balance
        p &pound;50.00
        // Currency in Â£
      .stat-box
        h3 Ongoing Sessions
        p
          a(href='session-details.html') 2 Active
        // Link to session details
    // Links to other pages with icons inside square/rectangular cards
    section#dashboard-links
      a(href='change-details.html')
        i.fas.fa-user-edit
        div Change Your Details
      a(href='add-car.html')
        i.fas.fa-car
        div Add Your Car
      a(href='pay-parking.html')
        i.fas.fa-credit-card
        div Pay for Parking
      a(href='logout.html')
        i.fas.fa-sign-out-alt
        div Logout
// Floating Chat Box Icon
.chat-box
  a(href='chat.html')
    i.fas.fa-comment-dots
// Footer
footer
  p &copy; 2025 ParkFlow. All Rights Reserved.
script(src='script.js')
