doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Change Details | ParkFlow
    link(rel="stylesheet" href="styles.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")

  body
    // Navbar
    nav.navbar
      .logo ParkFlow
      .menu-icon(onclick="toggleMenu()") &#9776;
      ul.nav-links
        li: a(href="/dashboard") Dashboard
        li: a(href="/logout") Logout

    // Main content
    .content
      .form-container
        h1 Change Your Details

        .details-box
          .detail-row
            label Email:
            span #{user.email}
            a.btn-change(href="/change-details/email") Change

          .detail-row
            label First Name:
            span #{user.first_name}
            a.btn-change(href="/change-details/first-name") Change

          .detail-row
            label Last Name:
            span #{user.last_name}
            a.btn-change(href="/change-details/last-name") Change

          .detail-row
            label Password:
            span ••••••••
            a.btn-change(href="/change-details/password") Change

    // Footer
    footer
      p &copy; 2025 ParkFlow. All Rights Reserved.
