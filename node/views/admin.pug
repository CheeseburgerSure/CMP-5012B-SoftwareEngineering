doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title User Dashboard | ParkFlow
    link(rel="stylesheet" href="styles.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")

  body
    // Navbar
    nav.navbar
      .logo ParkFlow
      .nav-items 
        ul.nav-links
          li: a(href="/dashboard") Dashboard
          li: a(href="/logout") Logout
      .menu-icon(onclick="toggleMenu()") &#9776;

    // User Dashboard Content
    .content
      .form-container
        h1 Admin Panel

        .current-users-count
          span Current Users: #{userCount || 0} 

        // Available Balance and Ongoing Sessions
        section#dashboard-stats
          a.stat-box(href="/admin/users")
            h3 USERS
          a.stat-box(href="/admin/bookings")
            h3 BOOKINGS

    // Footer
    footer
      p &copy; 2025 ParkFlow. All Rights Reserved.
