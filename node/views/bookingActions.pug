doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Edit Booking | ParkFlow
    link(rel="stylesheet" href="/styles.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")

  body
    nav.navbar
      .logo ParkFlow
      .nav-items 
        ul.nav-links
          li: a(href="/dashboard") Dashboard
          li: a(href="/logout") Logout
      .menu-icon(onclick="toggleMenu()") &#9776;

    .content
      h1 Edit Booking

      form(method="POST" action=`/admin/bookings/${booking.id}/edit`)
        .form-group
          label(for="user_id") User ID:
          input#user_id(type="text", name="user_id", value=booking.user_id, required)
        .form-group
          label User Name: #{booking.user_name}
        .form-group
          label(for="location") Location:
          input#location(type="text", name="location", value=booking.location, required)
        .form-group
          label(for="booking_date") Date:
          input#booking_date(type="date", name="booking_date", value=booking.booking_date)
        .form-group
          label(for="time_booked_for") Time:
          input#time_booked_for(type="time", name="time_booked_for", value=booking.time_booked_for)
        .form-group
          label(for="price") Price:
          input#price(type="number", name="price", value=booking.price, step="0.01")
        .form-group
          label(for="booking_paid") Paid:
          select#booking_paid(name="booking_paid")
            option(value="true" selected=booking.booking_paid) Yes
            option(value="false" selected=!booking.booking_paid) No
        button(type="submit") Save Changes
        a.button(href="/admin/bookings") Cancel

    footer
