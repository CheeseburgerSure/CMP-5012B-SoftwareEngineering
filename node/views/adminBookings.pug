doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Admin Bookings | ParkFlow
    link(rel="stylesheet" href="/styles.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")

  body
    // Navbar
    nav.navbar
      .logo ParkFlow
      .nav-items 
        ul.nav-links
          li: a(href="/dashboard") Dashboard
          li: a(href="/logout") Logout
      .menu-icon(onclick="toggleMenu()") &#9776;

    // Page Content
    .content
      h1 Admin - Bookings

      .table-container
        table.user-table
          thead
            tr
              th Booking ID
              th User ID
              th User Name
              th Location
              th Date
              th Time
              th Price
              th Paid
              th Actions
          tbody
            each booking in bookings
              tr
                td= booking.id
                td= booking.user_id
                td= booking.user_name
                td= booking.location
                td= booking.booking_date
                td= booking.time_booked_for
                td= booking.price
                td= booking.booking_paid ? 'Yes' : 'No'
                td: a(href=`/admin/bookings/${booking.id}/edit`) Edit

    // Footer
    footer
      p &copy; 2025 ParkFlow. All Rights Reserved.


